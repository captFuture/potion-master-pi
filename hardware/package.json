{
  "name": "potion-master-pi-hardware",
  "version": "1.0.0",
  "description": "Hardware controller for Raspberry Pi cocktail machine",
  "main": "cocktail-machine.js",
  "scripts": {
    "start": "node cocktail-machine.js",
    "dev": "nodemon cocktail-machine.js",
    "setup": "sudo npm install && npm run build-frontend",
    "build-frontend": "cd .. && npm run build",
    "kiosk": "DISPLAY=:0 chromium-browser --kiosk --noerrdialogs --disable-infobars --disable-session-crashed-bubble --disable-restore-session-state http://localhost:3000",
    "test-i2c": "node test-i2c.js",
    "test-scale": "node test-scale.js",
    "test-relay": "node test-relay.js",
    "test-all": "node test-i2c.js && node test-scale.js && node test-relay.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ws": "^8.14.2",
    "onoff": "^6.0.3",
    "i2c-bus": "^5.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": ["raspberry-pi", "cocktail", "hardware", "gpio", "i2c"],
  "author": "Your Name",
  "license": "MIT"
}